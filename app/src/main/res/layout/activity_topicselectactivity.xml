<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topicselectactivity"
    android:background="#FF012BFF"
    android:orientation="vertical"
    android:theme="@style/Theme.INQUIZITION3"
    android:padding="10dp"
    android:gravity="center"
    >

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select a topic for the quiz"
            android:textColor="@color/black"
            android:textSize="30dp"
            />

        <Button
            android:id="@+id/topic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Capitals"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:drawableTop="@drawable/capitalclipart"/>

        <Button
            android:id="@+id/topic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="F.R.I.E.N.D.S."
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:drawableTop="@drawable/tvclipart"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/anotheracc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text="Login with another account"
        android:textColor="@color/purple_700" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eidt PROFILE"
        android:textSize="15dp"
        android:drawableTop="@drawable/profilevectorasset"
        android:backgroundTint="@color/white"
        android:textColor="#012BFF"
        android:id="@+id/gotoeditprofile"
        />

</LinearLayout>