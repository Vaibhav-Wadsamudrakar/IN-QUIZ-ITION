<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topicselectactivity"
    android:background="@drawable/bluebackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a topic for the quiz"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                    />
                    <Button
                        android:id="@+id/topic1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capitals"
                        android:textAllCaps="false"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        />

                    <Button
                        android:id="@+id/topic2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F.R.I.E.N.D.S."
                        android:padding="10dp"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/anotheracc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with another account"
        android:backgroundTint="@color/white"
        android:textColor="@color/purple_700"
        />



</LinearLayout>